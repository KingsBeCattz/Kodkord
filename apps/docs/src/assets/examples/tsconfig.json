{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "noImplicitAny": false,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}